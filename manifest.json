{
  "name": "Notion Calendar Right Sidebar Hider",
  "description": "右サイドバー（268 px 列）をワンクリック／Ctrl(⌘)+Shift+P で表示・非表示にする Chrome 拡張。",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Hide Right Sidebar",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.notion.so/*"
  ],
  "homepage_url": "https://github.com/kassy0716/notion-calendar-right-sidebar-hider",
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-right-pane": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "右ペインを開閉"
    }
  }
}