{
  "name": "Notion Calendar Sidebar Hider",
  "description": "Notion Calendar の右サイドバー（コンテキストパネル）をワンクリック／Ctrl(⌘)+Shift+P で非表示・再表示します。",
  "version": "1.0.2",
  "manifest_version": 3,
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Toggle Sidebar",
    "default_icon": {
      "16":  "icons/icon16.png",
      "32":  "icons/icon32.png",
      "48":  "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.notion.so/*"
  ],
  "homepage_url": "https://github.com/kassy0716/notion-rightpane-toggle",
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-right-pane": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "右サイドバーを表示／非表示"
    }
  }
}
